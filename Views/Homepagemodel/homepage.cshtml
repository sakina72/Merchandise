@model List<WebApplication1.Models.homepagemodel>
@{
    ViewBag.Title = "homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int c = 0;
}
@foreach (var item in Model)
{
    c = c + 1;
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/carousel.jpg" alt="img1">
            </div>

            <div class="item">
                <img src="~/images/carousel1.jpg" alt="img2">
            </div>

            <div class="item">
                <img src="~/images/carousel2.jpg" alt="img3">
            </div>

        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</div>

<div class="container">

    <div class="row">
        @for (int i = 0; i < c; i = i + 1)
        {
            string Prod_Name = Model[i].Prod_Name;
            string Prod_Descr = Model[i].Prod_descr;
            string Prod_Price = Model[i].Prod_Price.ToString();
            string Prod_ID = Model[i].Prod_ID;

            @*<span>@item.Prod_Name</span><br />*@


            <div class="column">
                <div class="card">
                    <a href="/Product/Prod_Descr?Prod_Name=@Prod_Name&Prod_ID=@Prod_ID&Prod_Descr=@Prod_Descr&Prod_Price=@Prod_Price">
                        <img class="card-img-top" src="~/images/@(Model[i].Prod_ID.ToLower() + ".jpg")" alt="Card image" style="height:200px;width:200px">
                        <h5 class="card-title">@Model[i].Prod_Name</h5>
                    </a>
                    <form action="addtocart/?Prod_ID=@Prod_ID&Prod_Price=@Convert.ToInt16(Prod_Price)" method="post">
                            <button type="submit" value="addtocart" >ADD TO CART</button>
                    </form>
                </div>
            </div>

            @*<div class="column">
                    <div class="card">
                        <a href="#">
                            <img class="card-img-top" src="..." alt="Card image">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].Prod_Name</h5>
                            <p class="card-text">@Model[i].Prod_descr</p>
                        </div>
                    </div>
                </div>
